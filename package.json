{
  "name": "skills-hub",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "scripts": {
    "dev": "vite --port 5173 --strictPort",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "rust:fmt": "cd src-tauri && cargo fmt --all",
    "rust:fmt:check": "cd src-tauri && cargo fmt --all -- --check",
    "rust:clippy": "cd src-tauri && cargo clippy --all-targets --all-features -- -D warnings",
    "rust:test": "cd src-tauri && cargo test",
    "check": "npm run lint && npm run build && npm run rust:fmt:check && npm run rust:clippy && npm run rust:test",
    "preview": "vite preview",
    "version:set": "node scripts/version.mjs set",
    "version:sync": "node scripts/version.mjs sync",
    "version:check": "node scripts/version.mjs check",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "dev:all": "bash scripts/start-dev.sh",
    "tauri:dev:all": "bash scripts/start-dev.sh & tauri dev",
    "tauri:icon:desktop": "node scripts/tauri-icon-desktop.mjs",
    "tauri:build": "npm run version:check && tauri build",
    "tauri:build:mac:dmg": "npm run tauri:build -- --bundles dmg",
    "tauri:build:mac:universal:dmg": "npm run tauri:build -- --target universal-apple-darwin --bundles dmg",
    "tauri:build:win:exe": "npm run tauri:build -- --bundles nsis",
    "tauri:build:win:msi": "npm run tauri:build -- --bundles msi",
    "tauri:build:win:all": "npm run tauri:build -- --bundles msi,nsis",
    "tauri:build:linux:deb": "npm run tauri:build -- --bundles deb",
    "tauri:build:linux:appimage": "npm run tauri:build -- --bundles appimage",
    "tauri:build:linux:all": "npm run tauri:build -- --bundles deb,appimage"
  },
  "dependencies": {
    "@hugeicons/core-free-icons": "^3.1.1",
    "@hugeicons/react": "^1.1.5",
    "@streamdown/cjk": "^1.0.2",
    "@streamdown/code": "^1.0.2",
    "@streamdown/math": "^1.0.2",
    "@streamdown/mermaid": "^1.0.2",
    "@tailwindcss/vite": "^4.1.18",
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/plugin-dialog": "^2.5.3",
    "@tauri-apps/plugin-opener": "^2.5.3",
    "@tauri-apps/plugin-updater": "^2.5.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "easymde": "^2.20.0",
    "i18next": "^25.7.4",
    "i18next-browser-languagedetector": "^8.2.0",
    "lucide-react": "^0.562.0",
    "motion": "^12.34.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-i18next": "^16.5.3",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.12.0",
    "react-simplemde-editor": "^5.2.0",
    "recharts": "^3.7.0",
    "remark-gfm": "^4.0.1",
    "sonner": "^2.0.7",
    "streamdown": "^2.2.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "use-stick-to-bottom": "^1.1.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tauri-apps/cli": "^2.9.6",
    "@types/node": "^24.10.7",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.25",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.53.0",
    "vite": "^7.3.1"
  }
}
